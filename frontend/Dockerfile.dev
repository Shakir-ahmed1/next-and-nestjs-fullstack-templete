# Dockerfile for Next.js Frontend (Development)
FROM node:20-alpine AS base
WORKDIR /app

# Development stage
FROM base AS development

# Alpine node image already has node user (UID 1000, GID 1000)
RUN chown -R node:node /app

# Install dependencies
COPY --chown=node:node package*.json ./
RUN npm ci

# Copy source code
COPY --chown=node:node . .

USER node

EXPOSE 3001

CMD ["npm", "run", "dev"]

# Production stage (for future use)
FROM base AS production

# Use existing node user
RUN chown -R node:node /app

COPY --chown=node:node package*.json ./
RUN npm ci --only=production

COPY --chown=node:node . .

RUN npm run build

USER node

EXPOSE 3001

CMD ["npm", "start"]
