enum FilePurpose {
  avatar
  product
  // add other purposes as needed
}

model UploadImage {
  id        Int        @id @default(autoincrement())
  fileName  String
  fileUri   String     @unique
  filePath  String     @unique
  purpose   FilePurpose
  mimeType  String
  size      Int
  createdAt DateTime   @default(now())
  userId    String
  updatedAt DateTime?  @updatedAt
  // updatedBy Int?

  // creator   User?      @relation("createdUploadImages", fields: [createdBy], references: [id], onDelete: SetNull, onUpdate: Cascade)
  // updater   User?      @relation("updatedUploadImages", fields: [updatedBy], references: [id], onDelete: SetNull, onUpdate: Cascade)

  @@map("upload_images")
}
